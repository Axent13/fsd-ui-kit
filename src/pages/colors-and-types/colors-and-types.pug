include ../../components/logo/logo.pug
include ../../components/color-pick/color-pick.pug

doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Colors and Types
  body
    .logo-container
      +logo()
    .main-container
      .main-container__colors-container
        +color-pick('dark-shade-100', 'dark shade 100%', '#1f2041')
        +color-pick('dark-shade-75', 'dark shade 75%', '#1f2041')
        +color-pick('dark-shade-50', 'dark shade 50%', '#1f2041')
        +color-pick('dark-shade-25', 'dark shade 25%', '#1f2041')
        +color-pick('dark-shade-5', 'dark shade 5%', '#1f2041')
        +color-pick('purple', 'purple', '#bc9cff')
        +color-pick('green', 'green', '#6fcf97')
      .main-container__texts-container